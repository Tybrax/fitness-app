<p id="notice"><%= notice %></p>
  <h1>Users</h1>

  <table cellspacing="20">
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><p class="ml-5"><%= link_to user.name, user %></p></td>
          <td><p class="ml-5"><%= user.email %></p></td>
          <td><p class="ml-5"><%= link_to 'Edit', edit_user_path(user) %></p></td>
          <td><p class="ml-5"><%= link_to 'Remove user', user, method: :delete, data: { confirm: 'Are you sure to remove this user?' } %></p></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New User', new_user_path %>
