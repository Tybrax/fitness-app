<div class="jumbotron">
    <h1 class="text-center font-weight-bold text-transform-uppercase">Edit your account information</h1>
</div>

<div class="ml-5">
  <%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <% if current_user %>
        <h2 class="font-weight-bold"><%= current_user.name %></h1>
    <% end %>
    <div class="form-group mt-5">
        <h5 class="font-weight-bold">Edit email</h5>
        <%= form.email_field :email, class: 'field-control' %>
    </div>
    <div class="form-group mt-2">
      <h5 class="text-dark font-weight-bold">Upload a new picture</h5>
      <%= form.file_field :avatar %>
    </div>
    <div class="form-group mt-2">
        <h5 class="font-weight-bold">Change your password</h5>
        <%= form.password_field  :password, class: 'field-control' %>
    </div>
    <div class="field-group mt-2">
        <h5 class="font-weight-bold">Confirmation</h5>
        <%= form.password_field  :password_confirmation, class: 'field-control' %>
    </div>

    <div class="field-group mt-2">
      <button class="btn btn-dark mt-2 mb-5" type="submit">Save changes</button>
    </div>


  </div>
<% end %>
</div>

<%= link_to 'Back to user', @user %> |
<%= link_to 'Back to homepage', '/' %>
