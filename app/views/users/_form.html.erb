<div class="ml-5">
  <%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="form-group mt-2">
      <h5 class="font-weight-bold">Name</h5>
      <%= form.text_field :name, class: 'field-control' %>
    </div>

    <div class="form-group mt-2">
        <h5 class="font-weight-bold">Email</h5>
        <%= form.email_field :email, class: 'field-control' %>
    </div>

    <div class="form-group mt-2">
        <h5 class="font-weight-bold">Password</h5>
        <%= form.password_field  :password, class: 'field-control' %>
    </div>

    <div class="field-group mt-2">
        <h5 class="font-weight-bold">Confirmation</h5>
        <%= form.password_field  :password_confirmation, class: 'field-control' %>
    </div>

    <div class="field-group mt-2">
      <button class="btn btn-dark mt-2 mb-5" type="submit">Add</button>
    </div>


  </div>
<% end %>
</div>

