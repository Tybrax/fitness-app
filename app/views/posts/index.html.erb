<p id="notice"><%= notice %></p>

<div class="jumbotron mb-5">
  <h1 class="main-title text-center font-weight-bold">TRAVELER.COM</h1>
  <h4 class="text-center font-weight-bold">Traveling memories</h4>
</div>

<table class="ml-5">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="article-rows container border rounded shadow mb-5 pl-5 pr-5">
        <td class="resources"><%= link_to post.title, post, class: 'article-link' %></td>
        <td>
          <% if post.user == current_user %>
            <%= link_to 'Edit', edit_post_path(post), class: 'article-editers' %>
          <% end %>
        </td>
        <td>
          <% if post.user == current_user %>
            <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'article-editers' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
  <%= link_to 'Add an article', new_post_path, class: 'controls' %>
<% end %>
