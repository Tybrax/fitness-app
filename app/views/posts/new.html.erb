<h1>New article</h1>

<%= form_for @post do |f| %>
    <div class="form-group">
        <%= f.text_field :title, placeholder: 'title', class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.text_area :body, placeholder: 'content', class: 'form-control' %>
    </div>
    <div class="form-group">
        <button class="btn btn-dark" type="submit">Add new post</button>
    </div>
<% end %>
