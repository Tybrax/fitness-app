<p id="notice"><%= notice %></p>
<div class="jumbotron">
    <h1 class="text-center"><%= @post.title %></h1>
    <p><%= image_tag @post.user.avatar.url, class: 'user-avatar img-fluid border shadow rounded-circle' %><p>
    <h4>by <%= link_to @post.user.name, @post.user, class: 'user-name' %></h4>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
           <% if @post.photo.present? %>
                <p><%= image_tag @post.photo.url, class: 'img-fluid rounded shadow', width: 500 %></p>
           <% end %>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
            <article>
                <p class="text-justify"><%= @post.body %></p>
            </article>
        </div>
    </div>
</div>




<%= link_to 'Edit your article', edit_post_path(@post), class: 'controls' %> |
<%= link_to 'Back', posts_path, class: 'controls' %>
